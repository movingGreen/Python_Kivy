#:kivy 2.1.0

<telaPrincipal>
    MapView:
        id: main_map
        size: root.width, root.height

        MapMarkerPopup:
            id: main_map_me
            lat: -15.57
            lon: -56.03
            source: 'ponto_32.png'
            
            Button:
                size: root.width * 0.1, root.height * 0.1
                background_color: 0, 0, 0, 0
                background_normal: ''
                on_press: root.press()
                canvas.before:
                    Ellipse:
                        # source: 'marker_32.png'
                        angle_start: 0
                        angle_end: 360

        Button:
            text:'place pin'
            size: root.width * 0.3, root.height * 0.05
            pos: 0, 0
            on_press: root.place_pin()        

        Button:
            text:'remove pin'
            size: root.width * 0.3, root.height * 0.05
            pos: root.width * 0.7, 0
            on_press: root.remove_pin()                 